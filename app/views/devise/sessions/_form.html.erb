<%= form_for resource, as: resource_name,
  url: session_path(resource_name) do |f| %>
  <div class="field">
    <%= f.label :email, "名前" %><br />
    <%= f.email_field :email, autofocus: true,
      autocomplete: "email", class: "form-control resize" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "off",
      class: "form-control resize" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "アカウントの覚える" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<% if current_page?(new_admin_session_path) %>
  <%= link_to "ユーザーページ", new_user_session_path%>
<% else %>
  <% if current_admin %>
    <%= link_to "管理者ページ",  rails_admin_path%>
  <% else %>
    <%= link_to "管理者ページ",  new_admin_session_path%>
  <% end %>
<% end %>
<br>
<%= render "devise/shared/links" %>
