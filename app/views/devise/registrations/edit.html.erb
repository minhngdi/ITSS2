<% provide :title, 'ユーザー情報編集' %>
<%= form_for resource, as: resource_name,
  url: registration_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
<div class="container " >
     <div class="row text-center" style="padding-top:30px;">
         <div class="col-md-12">
          <h1>  ユーザープロフィール編集</h1>
             <br />
        </div>
     </div>
    <div class="row " style="padding-bottom:50px; ">
        <div class="col-md-3">
          <%= f.hidden_field(:avatar_cache) %>
          <%= image_tag(resource.avatar_url, size: "180x150") if resource.avatar? %>
          <%= f.file_field(:avatar) %>
        </div>
        <div class="col-md-9">
          <% if current_user && (current_user == @user)%>
          <div class="btn-group pull-right">
           <button type="button" class="btn btn-success"><%= current_user.name %></button>
           <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
             <span class="caret"></span>
             <span class="sr-only">Toggle Dropdown</span>
           </button>
           <ul class="dropdown-menu" role="menu">
             <li><%= link_to "ユーザー情報の編集", edit_user_registration_path %></li>
             <li class="divider"></li>
             <li><%= link_to "サインアウト", destroy_user_session_path,
             method: :delete %></li>
           </ul>
         </div>
          <% end %>
            <br /><br />
            <hr />
            <div class="d-flex p-2">
             <h3><strong> 名前:<%= f.text_field :name, class: "form-control "  %></h3>

              <h3> <strong> メール:<%= f.email_field :email, class: "form-control" %></h3>
             <h3>  <strong> 役割: </strong><%= @user.role == 1 ? "ユーザー" : "管理者" %></h3>
             </div>
             <br>
             <%= f.submit "編集", class: "btn btn-primary" %>
           <% end %>
        </div>
    </div>
</div>
</body>
</html>
