<!--about-starts-->
	<div class="about">
		<div class="container">
			<div class="about-main">
				<div class="col-md-12 about-left">
					<div class="about-tre head-bt">
					<a href="#"><button class="btn-gt">おすすめのスポット</button></a>
						<div class="a-1 r-bn">
							<% top3 = Rate.select('rateable_id, avg(stars)').group(:rateable_id).order('avg(stars) desc').first(3) %>
							<% top3.each do |topr| %>
								<% top = Hotel.find(topr.rateable_id) %>
								<div class="col-md-4 abt-left">
									<%= image_tag top.hotel_pictures.first.picture.url, alt: top.name, class:"img-bn" %>

									<div class="rating-block">
										<% if top.average("quality") %>
										<h3><%= link_to top.name, hotel_path(top) %></h3>
										<% for i in 1..5 do %>
											<% if i > top.average("quality").avg.round(0)%>
												<%= image_tag "star-off", class: "show-rate"%>
											<% else %>
												<%= image_tag "star-on", class: "show-rate"%>
											<% end %>
										<% end %>
										(<%= top.average("quality").avg.round(0)%>)
						          <h4>
						            レート人数：<%= top.rates("quality").count %>
						          </h4>
						        <% end %>
						      </div>
                </div>
							</div>
						<% end %>
						<div class="clearfix"></div>
					</div>
					<br><br>
					<div class="col-md-12 about-left">
						<div class="about-tre head-bt">
							<a href="#"><button class="btn-gt">パーティーにうってつけのスポット</button></a>
								<div class="a-1 r-bn">
